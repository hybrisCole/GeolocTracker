<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TrackerActivity"
    android:id="@+id/TrackerLayout">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trackear PosiciÃ³n"
        android:id="@+id/btnStartTrack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12pt"
        android:clickable="true"
        android:onClick="startTrackOnClick"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:id="@+id/spnFrecuencia"
        android:layout_above="@+id/btnStartTrack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:spinnerMode="dropdown"
        android:entries="@array/interval_array"
        android:focusable="true"
        android:textAlignment="center"
        android:textSize="13sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Long"
        android:id="@+id/txtLat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:textSize="30pt"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lat"
        android:id="@+id/txtLang"
        android:textSize="30pt"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
